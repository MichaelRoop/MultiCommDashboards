<local:UC_InputBase x:Class="MultiCommDashboards.UserControls.UC_HorizontalSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiCommDashboards.UserControls"
             xmlns:helpers="clr-namespace:MultiCommDashboards.WpfHelpers"
             xmlns:customButtons="clr-namespace:WpfCustomControlLib.Core.Buttons;assembly=WpfCustomControlLib.Core"
             xmlns:customSliders="clr-namespace:WpfCustomControlLib.Core.Sliders;assembly=WpfCustomControlLib.Core"
             BorderBrush="{Binding Source={StaticResource CommonBlue}}" BorderThickness=".5"
             mc:Ignorable="d" >
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,2">
            <Label x:Name="lbId" Content="{Binding Source={x:Static helpers:TxtBinder.Id}}" FontSize="14"
                   Style="{Binding Source={StaticResource NameLabelLeft}}" Margin="3,0,0,0" Padding="0" />
            <Label Content=":"  Style="{Binding Source={StaticResource NameLabelRight}}" FontSize="14"
                   Margin="0" Padding="0" VerticalAlignment="Center" />
            <Label x:Name="lbIdTxt" Content="0"  Padding="0" Margin="2,0,0,0" FontSize="14"
                   Style="{Binding Source={StaticResource NameLabelRight}}"  />
            <Label x:Name="lbIdNameTxt" Content="My Name"  Style="{Binding Source={StaticResource NameLabelRight}}" 
                   Margin="5,0,0,0" Padding="0" FontSize="14" />
        </DockPanel>
        <Border Grid.Row="1"  Padding="0" Margin="0" Style="{StaticResource brd075}">
            <Slider Grid.Column="0" x:Name="sliderNumeric" Style="{StaticResource MySliderStyle }" Margin="0" Width="90" />
        </Border>
        <Border Grid.Row="1"  Grid.Column="3" Style="{StaticResource brd075}" Margin="0" Padding="0">
            <Label  x:Name="lblValue" Style="{StaticResource NameLabelCenter }" Padding="0" Margin="0" Content="0" Width="50" 
                    HorizontalContentAlignment="Center" FontSize="14" />
        </Border>
    </Grid>

</local:UC_InputBase>
