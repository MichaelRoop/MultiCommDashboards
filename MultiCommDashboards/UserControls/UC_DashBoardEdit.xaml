<UserControl x:Class="MultiCommDashboards.UserControls.UC_DashBoardEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiCommDashboards.UserControls"
             xmlns:helpers="clr-namespace:MultiCommDashboards.WpfHelpers"
             xmlns:buttons="clr-namespace:WpfCustomControlLib.Core.Buttons;assembly=WpfCustomControlLib.Core"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="250"/>
            <ColumnDefinition MinWidth="150"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" >
            <Label Content="Outputs" Style="{StaticResource NameLabelCenter}" />
        </DockPanel>

        <DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Label Content="Inputs" Style="{StaticResource NameLabelCenter}"/>
        </DockPanel>
        
        <Grid Grid.Row="3" Grid.Column="0"  >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" x:Name="grdInputsBool" Background="Wheat">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" x:Name="brdBool_0" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_BoolToggle/>
                </Border>
                <Border Grid.Row="1" Grid.Column="0" x:Name="brdBool_1" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_BoolToggle/>
                </Border>
                <Border Grid.Row="2" Grid.Column="0" x:Name="brdBool_2" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_BoolToggle/>
                </Border>
                <Border Grid.Row="3" Grid.Column="0" x:Name="brdBool_3" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_BoolToggle/>
                </Border>
            </Grid>

            <Grid Grid.Row="1" x:Name="grdInputsNumHorizontal" Background="LightGreen">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border Grid.Row="0" Grid.Column="0" x:Name="brdHNum_0" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_HorizontalSlider/>
                </Border>
                <Border Grid.Row="1" Grid.Column="0" x:Name="brdHNum_1" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_HorizontalSlider/>
                </Border>
                <Border Grid.Row="2" Grid.Column="0" x:Name="brdHNum_2" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_HorizontalSlider/>
                </Border>
                <Border Grid.Row="3" Grid.Column="0" x:Name="brdHNum_3" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_HorizontalSlider/>
                </Border>
                <Border Grid.Row="4" Grid.Column="0" x:Name="brdHNum_4" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_HorizontalSlider/>
                </Border>
                <Border Grid.Row="5" Grid.Column="0" x:Name="brdHNum_5" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                    <local:UC_HorizontalSlider/>
                </Border>


            </Grid>
            
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" x:Name="grdInputsNumVertical" Background="LightBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0" Grid.Column="0" x:Name="brdVNum_0" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                <local:UC_VerticalSlider/>
            </Border>
            <Border Grid.Row="1" Grid.Column="0" x:Name="brdVNum_1" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                <local:UC_VerticalSlider/>
            </Border>
            <Border Grid.Row="2" Grid.Column="0" x:Name="brdVNum_2" Opacity=".4" MouseLeftButtonUp="mouseLeftButtonUp" >
                <local:UC_VerticalSlider/>
            </Border>



        </Grid>
        
        
    </Grid>
</UserControl>
