<UserControl x:Class="MultiCommDashboards.UserControls.UC_BoolToggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:MultiCommDashboards.WpfHelpers"
             xmlns:local="clr-namespace:MultiCommDashboards.UserControls"
             xmlns:customControl="clr-namespace:WpfCustomControlLib.Core.Buttons;assembly=WpfCustomControlLib.Core"
             xmlns:userControl="clr-namespace:WpfUserControlLib;assembly=WpfUserControlLib"
             BorderBrush="{Binding Source={StaticResource CommonBlue}}" BorderThickness=".5"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <Style x:Key="MySliderStyle" TargetType="{x:Type Slider}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Slider}">
                        <Grid VerticalAlignment="Center">
                            <Border x:Name="borderBackground" Margin="2,0" Height="24" Background="LightGray" />
                            <Canvas VerticalAlignment="Center">
                                <!--<Border x:Name="PART_SelectionRange" 
                                        HorizontalAlignment="Left" VerticalAlignment="Center" Margin="-12,-12,0,0" 
                                        Height="24" Background="{TemplateBinding Foreground}" />-->
                            </Canvas>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="24" Height="24" Background="{TemplateBinding Foreground}" />
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="50"/>
            <Setter Property="IsSelectionRangeEnabled" Value="True" />
            <Setter Property="SelectionStart" Value="{Binding Minimum, RelativeSource={RelativeSource Self}}" />
            <Setter Property="SelectionEnd" Value="{Binding Value, RelativeSource={RelativeSource Self}}" />
            <Setter Property="Foreground" Value="Red" />
        </Style>
    </UserControl.Resources>
    
    
    <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <Label x:Name="lbId" Content="{Binding Source={x:Static helpers:TxtBinder.Id}}"  Style="{Binding Source={StaticResource NameLabelLeft}}" Margin="5,0,0,0" Padding="0" VerticalAlignment="Center" />
            <Label Content=":"  Style="{Binding Source={StaticResource NameLabelRight}}" Margin="0" Padding="0" VerticalAlignment="Center" />
            <Label x:Name="lbIdTxt" Content="0"  Style="{Binding Source={StaticResource NameLabelRight}}" Margin="0"  />
        </DockPanel>

        <Slider Grid.Column="1" x:Name="slider" Style="{Binding Source={StaticResource MySliderStyle}}"
                MinWidth="40" VerticalAlignment="Center"  IsSnapToTickEnabled="True" Minimum="0" Maximum="1" TickFrequency="1"
               ValueChanged="Slider_ValueChanged"  >
        </Slider>


        <!--<Slider Grid.Column="1" MinWidth="40" VerticalAlignment="Center"  IsSnapToTickEnabled="True" Minimum="0" Maximum="1" TickFrequency="1"  >
            <Slider.Resources>
                --><!--<SolidColorBrush x:Key="SliderThumbBackground" Color="Black" />
                <SolidColorBrush x:Key="SliderThumbBorder" Color="Black" />--><!--

                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Black" />
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlDarkDarkBrushKey}" Color="Silver" />

                <SolidColorBrush x:Key="SliderSelectionBackground" Color="Black" />
            </Slider.Resources>
        </Slider>-->



    </Grid>
</UserControl>
