            </DockPanel>-->

            <controls:UC_BoolToggle x:Name="sliderBool"/>
            <controls:UC_HorizontalSlider x:Name="numericSlider"/>
            <controls:UC_HorizontalProgressBar x:Name="numericOutput"/>
        </StackPanel>

