<Window x:Class="MultiCommDashboards.WindowObjs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiCommDashboards.WindowObjs"
        xmlns:controls="clr-namespace:MultiCommDashboards.UserControls"
        xmlns:helpers="clr-namespace:MultiCommDashboards.WpfHelpers"
        xmlns:buttons="clr-namespace:WpfCustomControlLib.Core.Buttons;assembly=WpfCustomControlLib.Core"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            
        <DockPanel HorizontalAlignment="Center">
            <buttons:UC_IconButton x:Name="btnConnect"  Margin="0,0,10,0" 
                Style="{StaticResource TextIconButton}"  
                Content="{Binding Source={x:Static helpers:TxtBinder.Connect}}"
                IconSource="{Binding Source={x:Static helpers:IconBinder.OK}}"                                   
                Click="btnConnect_Click"/>

            <buttons:UC_IconButton x:Name="btnDisconnect"  Margin="0,0,10,0" 
                Style="{StaticResource TextIconButton}"  
                Content="{Binding Source={x:Static helpers:TxtBinder.Disconnect}}"
                IconSource="{Binding Source={x:Static helpers:IconBinder.OK}}"                                   
                Click="btnDisconnect_Click"/>

            <buttons:UC_IconButton x:Name="btnSend"  Margin="0,0,10,0" 
                Style="{StaticResource TextIconButton}"  
                Content="{Binding Source={x:Static helpers:TxtBinder.Send}}"
                IconSource="{Binding Source={x:Static helpers:IconBinder.SEND}}"                                   
                Click="btnSend_Click"/>
        </DockPanel>
            <TextBox x:Name="txtInput" Text="XXXX" HorizontalAlignment="Center" Margin="30" FontSize="16" />

        <DockPanel HorizontalAlignment="Center">
            <controls:UC_ValueDisplay/>

        </DockPanel>
            <controls:UC_BoolToggle x:Name="sliderTest"/>
        
        </StackPanel>


    </Grid>
</Window>
