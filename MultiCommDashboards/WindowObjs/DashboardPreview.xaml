<Window x:Class="MultiCommDashboards.WindowObjs.DashboardPreview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiCommDashboards.WindowObjs"
        xmlns:controls="clr-namespace:MultiCommDashboards.UserControls"
        xmlns:helpers="clr-namespace:MultiCommDashboards.WpfHelpers"
        xmlns:customControls="clr-namespace:WpfCustomControlLib.Core.Buttons;assembly=WpfCustomControlLib.Core"
        mc:Ignorable="d"
        Style="{StaticResource MyWindowStyle}"
        WindowStartupLocation="CenterScreen" 
        Title="{Binding Source={x:Static helpers:TxtBinder.Configure}}"
        Icon="{Binding Source={x:Static helpers:IconBinder.CONFIGS_W}}"
        Loaded="Window_Loaded" Closing="Window_Closing"
        >
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <controls:UC_Dashboard x:Name="ucDashboard" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
    </Grid>
</Window>
